<h1 class="display-1 text-center mb-3">Community Communication</h1>

<div class="row m-0 p-0 justify-content-center">
    {{#each blogs}}
    <div class="col-3  border border-1 m-2 p-2 user-banner2">
        <div class="card border-0">
            <img class="card-img" src="https://source.unsplash.com/800x600/?food-emissions" alt="blogPost">
            
            <div class="card-img-overlay">
                <a href="#" class="btn btn-light btn-sm"> NEW</a>
            </div>
            <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <br />
                <p class="card-text blog-height"><i class="fa-solid fa-quote-left text-warning"></i>
                    {{this.description}}
                    <i class="fa-solid fa-quote-right text-warning"></i>
                </p>
            </div>
        </div>
        {{#ifEquals ../user.userRole "Admin"}}
            <hr class="m-auto w-50 pt-4 ">
            <div class="row w-75 m-auto m-3" id="blogbtn">
                <div class="col-lg text-center btn btn-primary m-3">
                    <a href="/blog/edit/{{this._id}}" title="Edit" class=" text-light text-decoration-none">
                        Edit Post
                    </a>
                </div>
                <div class="col-lg text-center btn btn-danger m-3">
                    <a href="/blog/delete/{{this._id}}" title="Delete" class=" text-light text-decoration-none" onclick="return confirmDelete();">
                        Delete
                    </a>
                </div>
            </div>
        {{/ifEquals}}
        {{#ifEquals ../user.userRole "CommunityMember"}}
            <hr class="m-auto w-50 pt-4 ">
            <div class="row w-75 m-auto m-3" id="blogbtn">
                <div class="col-lg text-center btn btn-primary m-3">
                    <a href="/blog/edit/{{this._id}}" title="Edit" class=" text-light text-decoration-none">
                        Edit Post
                    </a>
                </div>
                <div class="col-lg text-center btn btn-danger m-3">
                    <a href="/blog/delete/{{this._id}}" title="Delete" class=" text-light text-decoration-none" onclick="return confirmDelete();">
                        Delete
                    </a>
                </div>
            </div>
            {{/ifEquals}}
    </div>
    {{/each}}
</div>