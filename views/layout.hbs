              <a class="nav-link" href="/dashboard/">Data Panel</a>
              <a class="nav-link" href="/dashboard/create">Add Emission</a>
            </ul>
          </li>

          {{else}}
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/blog/index">Blogs</a>
          </li>
          {{/if}}

        </ul>
        <ul class="navbar-nav ms-auto">
          {{#unless user}}
          <li class="nav-item">
            <a class="nav-link" href="/auth/register">Register</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/auth/login">login</a>
          </li>
          {{/unless}}

          {{#if user}}
          <li class="nav-item">
            <a class="nav-link user-banner" href="#">
              Welcome
              {{user.username}}
            </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">logout</a>
          </li>

          {{/if}}
        </ul>

      </div>
    </div>
  </nav>
