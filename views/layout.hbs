            <a class="nav-link" aria-current="page" href="/blog/index">Blogs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/dashboard">Dashboard</a>
          </li>
          {{/if}}

        </ul>
        <ul class="navbar-nav ms-auto">
          {{#unless user}}
          <li class="nav-item">
            <a class="nav-link" href="/auth/register">Register</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/auth/login">Login</a>
          </li>
          {{/unless}}

          {{#if user}}
          <li class="nav-item">
            <a class="nav-link user-banner" href="#">
