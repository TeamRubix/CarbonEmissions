<div class="register-container mt-5">
        <h1 class="text-center">Registration</h1>
        <form method="post" class="p-4" id="loginForm">
                <div class="item" id="item-1">
                        {{! <label for="username" class="col-1 form-label">Username: </label> }}
                        <input class="form-control text-center m-auto w-50" name="username" id="username"
                                placeholder="Username" required />
                </div>
                <div class="item" id="item-2">
                        {{! <label for="password" class="col-1 form-label">Password: </label> }}
                        <input class="form-control text-center m-auto w-50" name="password" id="password"
                                type="password" placeholder="Password" required />
                </div>

                <div class="mt-3">
                        <select class="form-control text-center m-auto w-75" name="userRole" id="userRole" required>
                                <option value="">Select A User Role</option>
                                <option value="Student">Student</option>
                                <option value="Educator">Educator</option>
                                <option value="HTRFaculty">HTR Faculty</option>
                                <option value="CommunityMember">Community Member</option>
                        </select>
                </div>
                <div class="item" id="item-2">
                        <button class="btn-style" type="submit">Login</button>
                </div>

                <hr class="w-50 m-auto text-center border-danger mt-4" />

                <div class="item text-center" id="item-6">
                        <a href="/auth/google" class="m-auto text-center">
                                <img src="/images/google-icon.svg" alt="google-logo" /><br />
                                <span>Google Sign-in</span>
                        </a>

                </div>

        </form>

        <hr class="w-50 m-auto text-center border-danger" />

        <div>
                <p class="h5 m-4 mt-3">
                        Need an account?
                        <a href="/auth/register" title="Register">Register</a>
                </p>
        </div>

</div>